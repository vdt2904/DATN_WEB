@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DATNWEB.Models.FilmGenre;
@{
    ViewData["Title"] = "FilmGenreEdit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@if (TempData["AddError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["AddError"]
    </div>
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Add FilmGenre</h4>
        <form method="post" action="@Url.Action("FilmGenreEdits", "FilmGenre")" class="forms-sample">
            @Html.AntiForgeryToken()
            <input type="text" class="form-control" asp-for="Id" placeholder="ID" value="@Model.Id" readonly>
            <div class="form-group">
                <label>Anime</label>
                <select asp-for="AnimeId" class="form-control" asp-items="ViewBag.Anime"></select>
            </div>
            <div class="form-group">
                <label>Season</label>
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.Genre"></select>
            </div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" href="/admin/FilmGenre">Cancel</a>
        </form>
    </div>
</div>
